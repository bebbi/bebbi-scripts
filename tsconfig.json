{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "resolveJsonModule": true,
    "outDir": "dist/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "*": ["*", "../tests/*"]
    }
  },
  "exclude": ["dist", "node_modules", "**/*.test.ts", "**/*.test.js", "**/*.test.tsx", "**/*.test.jsx"]
}
