    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "tsconfig.js": "^3.0.0",
    "typescript": "^5.2.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "which": "^4.0.0",
    "yargs-parser": "^21.1.1"
  }
